	<id>ca.vlacroix.Tally</id>

	<name>Tally</name>
	<summary>Count anything</summary>
	<url type="bugtracker">https://github.com/vtrlx/tally/issues</url>
	<url type="contact">https://www.vlacroix.ca/about</url>
